@namespace Skclusive.Material.Docs.App.View

<style>
    .bootstrap-button {
        border: 1px solid;
        padding: 6px 12px;
        font-size: 16px;
        box-shadow: none;
        font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol";
        line-height: 1.5;
        border-color: #007bff;
        text-transform: none;
        background-color: #007bff;
    }
    .bootstrap-button:hover {
        box-shadow: none;
        border-color: #0062cc;
        background-color: #0069d9;
    }
    .bootstrap-button:active {
        box-shadow: none;
        border-color: #005cbf;
        background-color: #0062cc;
    }
    .bootstrap-button:focus {
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.5);
    }

    .custom-theme {
        display: inline;
        --theme-palette-primary-main: #4caf50;
        --theme-palette-primary-alternate: #388e3c;
    }

    .custom-css {
        color: #fff;
        background-color: #9c27b0;
    }
    .custom-css:hover {
        background-color: #7b1fa2;
    }
</style>

<div>
    <Button
        Variant="@ButtonVariant.Contained"
        Color="@Color.Primary"
        Class="custom-css"
        Style="margin: 8px;">
        Custom CSS
    </Button>
    <div
        class="custom-theme">
        <Button
            Variant="@ButtonVariant.Contained"
            Color="@Color.Primary"
            Style="margin: 8px;">
            Theme Provider
        </Button>
    </div>
    <Button
        Variant="@ButtonVariant.Contained"
        Color="@Color.Primary"
        DisableRipple
        Class="bootstrap-button"
        Style="margin: 8px;">
        Bootstrap
    </Button>
</div>