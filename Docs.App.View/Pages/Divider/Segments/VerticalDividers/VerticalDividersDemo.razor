@namespace Skclusive.Material.Docs.App.View

<style>
    .demo-vertical-divider {
        color: var(--theme-palette-text-secondary);
        width: fit-content;
        border: 1px solid var(--theme-palette-divider);
        border-radius: calc(var(--theme-shape-border-radius) * 1px);
        background-color: var(--theme-palette-background-paper);
    }
    .demo-vertical-divider svg {
        margin: 16px;
    }
    .demo-vertical-divider hr {
        margin: 0px 4px;
    }
</style>

<Grid
    Container
    AlignItems="@AlignItems.Center"
    Class="demo-vertical-divider">
    <FormatAlignLeftIcon />
    <FormatAlignCenterIcon />
    <FormatAlignRightIcon />
    <Divider
        Orientation="@Orientation.Vertical" />
    <FormatBoldIcon />
    <FormatItalicIcon />
    <FormatUnderlinedIcon />
</Grid>