@namespace Skclusive.Material.Docs.App.View
@inherits MaterialComponentBase

<MarkdownCode
    Class="@_Class"
    Style="@_Style"
    Text="@(@"
```html
<div>
    <Button
        Variant=""@ButtonVariant.Outlined""
        Color=""@Color.Primary""
        OnClick=""@HandleOpen"">
        Show backdrop
    </Button>
    <Backdrop
        Style=""color: #fff;z-index: calc(var(--theme-zindex-drawer) + 1)""
        Open=""@Open""
        OnClick=""@HandleClose"">
        <CircularProgress
            Color=""@Color.Inherit"" />
    </Backdrop>
</div>
```

```csharp
@code
{
    private bool Open { set; get; }

    private void HandleOpen()
    {
        Open = true;

        StateHasChanged();
    }

    private void HandleClose()
    {
        Open = false;

        StateHasChanged();
    }
}
```
")" />